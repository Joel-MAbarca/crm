{
  "$schema": "https://railway.app/railway.schema.json",
  "name": "CRM Monorepo",
  "startCommand": "echo 'Iniciando servicios en Railway'",
  "services": [
    {
      "name": "crm-backend",
      "project": "Pretty-Magic CRM",
      "isPublic": false,
      "environmentId": "production",
      "repoRoot": "backend",
      "buildCommand": "python manage.py collectstatic --noinput",
      "deploy": {
        "buildEnvironment": {
          "PYTHONUNBUFFERED": "1"
        },
        "dockerfile": "Dockerfile",
        "startCommand": "/start.sh"
      }
    },
    {
      "name": "crm-frontend",
      "project": "Pretty-Magic CRM",
      "isPublic": true,
      "environmentId": "production",
      "repoRoot": "frontend",
      "deploy": {
        "dockerfile": "Dockerfile",
        "startCommand": "npm run preview -- --host 0.0.0.0 --port $PORT"
      }
    }
  ]
}